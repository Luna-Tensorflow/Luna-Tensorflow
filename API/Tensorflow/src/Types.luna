import Std.Foreign.C.Value

class FloatType:
      def typename:
          "TF_FLOAT"
      def ctype:
          CFloat
      def fromC val:
          val.toReal
      def toC val:
          CFloat.fromReal val

class DoubleType:
      def typename:
          "TF_DOUBLE"
      def ctype:
          CDouble
      def fromC val:
          val.toReal
      def toC val:
          CDouble.fromReal val

