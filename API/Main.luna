import Std.Base
import Std.Foreign
import Std.Foreign.C.Value

def checkAdd:
    print "checkAdd:"
    number = 42
    print ("number: " + number.toText)

    add1 = lookupSymbol "libTFL" "add1"
    cResult = add1.call CInt32 [CInt32.fromInt(number).toCArg]
    result = cResult.toInt
    print ("number + 1: " + result.toText)
    None

def checkLifetime:
    print "checkLifeTime:"
    number = 3
    print ("number: " + number.toText)

    getPtr = lookupSymbol "libTFL" "getPtr"
    ptr = getPtr.call (Pointer CInt32) [CInt32.fromInt(number).toCArg]

    releaseMethod = lookupSymbol "libTFL" "release"
    managedPtr = ManagedPointer None . fromPointer releaseMethod ptr

    getValue = lookupSymbol "libTFL" "getValue"

    cVal = getValue.call CInt32 [managedPtr.toCArg]
    val = cVal.toInt
    print ("restored value: " + val.toText)
    None

def checkTensorPtr:
    print "checkTensorPtr"
    values = [1, 2, 3, 4]
    print ("values: " + values.toText)

    tensorFloatFromArray = lookupSymbol "libTFL" "make_float_tensor"
    tensor = tensorFloatFromArray.call (Pointer None) [Array.fromList(values).toCArg, values.length]

    None

def main:
    checkAdd
    checkLifetime
    None
